<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/CardView"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CardView">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/information_background_main"
            app:riv_corner_radius_top_left="3dp"
            app:riv_corner_radius_top_right="3dp"
            app:riv_mutate_background="true" />


        <TextView
            android:id="@+id/tv_products_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_product"
            android:layout_alignStart="@id/iv_product"
            android:padding="16dp"
            android:text="Наш новый дизайн"
            android:background="@drawable/background_product_header"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_comments_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ib_comments"
            android:layout_alignTop="@id/ib_comments"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="13"
            android:textAlignment="center"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/ib_comments"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/iv_product"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/tv_comments_quantity"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_question_answer_black_24dp" />


        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/iv_product"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/ib_comments"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_share_black_24dp" />

        <ImageButton
            android:id="@+id/ib_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/iv_product"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/ib_share"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_favorite_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
